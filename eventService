import axios from 'axios';
import { API_HOST_PREFIX, onGlobalSuccess } from './serviceHelpers';

const eventService = {
    endpoint: `${API_HOST_PREFIX}/api/events`,
};

eventService.add = (payload) => {
    const config = {
        method: 'POST',
        url: eventService.endpoint,
        data: payload,
        crossdomain: true,
        headers: { 'Content-Type': 'application/json' },
    };

    return axios(config).then(onGlobalSuccess);
};

eventService.getPagesEvents = (pageIndex, pageSize) => {
    const config = {
        method: 'GET',
        url: eventService.endpoint + `/paginate?pageIndex=${pageIndex}&pageSize=${pageSize}`,
        crossdomain: true,
        headers: { 'Content-Type': 'application/json' },
    };

    return axios(config).then(onGlobalSuccess);
};

export default eventService;
